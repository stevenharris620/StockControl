@inherits LayoutComponentBase

<MudLayout>
	<MudAppBar Elevation="1">
		<MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
		<MudText Typo="Typo.h5" Class="ml-3">Stock</MudText>
		<MudSpacer />
		<LoginDisplay/>

		<MudToggleIconButton Toggled="@AlarmOn" 
		                     Icon="@Icons.Material.Filled.DarkMode" Color="@Color.Primary" Title="Off" style="@(AlarmOn ? "color:yellow":"color:black")"
		                     ToggledIcon="@Icons.Material.Filled.LightMode" ToggledColor="@Color.Inherit" ToggledTitle="On" ToggledChanged="OnToggledChanged"/>
	</MudAppBar>
	<MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2" style="color:yellow">

		<NavMenu></NavMenu>
	</MudDrawer>
	<MudMainContent>
		@Body
	</MudMainContent>
</MudLayout>

