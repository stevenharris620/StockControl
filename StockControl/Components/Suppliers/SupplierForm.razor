 @namespace StockControl.Components
 
 <EditForm Model="_model" OnValidSubmit="SubmitFormAsync" style="width: 800px">
	 
	 @if (!string.IsNullOrWhiteSpace(_errorMessage))
	 {
		 <MudAlert Severity="Severity.Error" Variant="Variant.Filled" Class="my-2">@_errorMessage</MudAlert>
	 }
	 
	 <DataAnnotationsValidator />
	 
	 <MudTextField Label="Name"  @bind-Value="@_model.Name"  Variant="Variant.Outlined"/>
	 <ValidationMessage For="@(() => _model.Name)"/>
	 <MudTextField Label="Address"  @bind-Value="@_model.Add1"  Variant="Variant.Outlined"/>
	 <MudTextField   @bind-Value="@_model.Add2"  Variant="Variant.Outlined"/>
	 <MudTextField  @bind-Value="@_model.Add3"  Variant="Variant.Outlined"/>
	 <MudTextField Label="Postcode"  @bind-Value="@_model.Postcode"  Variant="Variant.Outlined"/>
	 <MudTextField Label="Email"  @bind-Value="@_model.Email"  Variant="Variant.Outlined"/>
	 <MudTextField Label="Website"  @bind-Value="@_model.Website"  Variant="Variant.Outlined"/>
	 <MudTextField Label="Contact"  @bind-Value="@_model.Contact"  Variant="Variant.Outlined"/>
	 
	 <MudDivider DividerType="DividerType.FullWidth" Class="mt-3" />

	 <MudButton Color="Color.Primary" Variant="Variant.Filled"
	            ButtonType="ButtonType.Submit" FullWidth="true" Disabled="_isBusy">Save</MudButton>

 </EditForm>


